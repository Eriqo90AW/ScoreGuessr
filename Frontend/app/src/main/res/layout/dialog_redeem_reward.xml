<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are You Sure?"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="22dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/rewards_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_remove_circle_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/rewards_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Google Play $5"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/rewards_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="Giftcard"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0"
                android:layout_marginRight="25dp"
                >
                <TextView
                    android:id="@+id/rewards_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:layout_gravity="center"
                    android:text="14,999"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_tight_medium"
                    android:layout_gravity="center"
                    android:text="points"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            >
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_credit_card_24"
                android:background="@null"
                android:layout_marginLeft="18dp"
                android:contentDescription="Back Button"
                android:layout_weight="0"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:textSize="20sp"
                android:text="Cost"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="747.345"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            >
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_account_balance_wallet_24_black"
                android:background="@null"
                android:layout_marginLeft="18dp"
                android:contentDescription="Back Button"
                android:layout_weight="0"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:textSize="20sp"
                android:text="Current"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:layout_marginLeft="4dp"
                android:layout_weight="0"
                android:textSize="20sp"
                android:text="Points"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="747.345"/>

        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Redeem"
            android:fontFamily="@font/inter_tight_medium"
            android:background="@drawable/redeem_button_background"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Cancel"
            android:fontFamily="@font/inter_tight_medium"
            android:textColor="@color/black"
            android:backgroundTint="@color/background"
            android:textAllCaps="false"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>